<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CurveLineChartView">
        <attr name="lineWidth" format="dimension" />
        <attr name="scrollEnabled" format="boolean" />

        <attr name="yLegendLineWidth" format="dimension" />
        <attr name="yLegendCount" format="integer" />
        <attr name="yLegendTextSize" format="dimension" />
        <attr name="yLegendMarginBottom" format="dimension" />
        <attr name="yLegendMarginStart" format="dimension" />
        <attr name="yLegendTextColor" format="color" />
        <attr name="yLegendLineColor" format="color" />

        <attr name="xLegendTextColor" format="color" />
        <attr name="xLegendTextSize" format="dimension" />
        <attr name="xLegendMarginTop" format="dimension" />
        <attr name="xLegendMarginHorizontalPercent" format="fraction" />
        <attr name="xLegendCount" format="integer" />

        <attr name="popupLineColor" format="color" />
        <attr name="popupLinePointInnerColor" format="color" />
        <attr name="popupLineWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CurveLineGraphView" parent="CurveLineChartView">
        <attr name="lineWidth" />
        <attr name="scrollEnabled" />
    </declare-styleable>

    <declare-styleable name="XAxisView" parent="CurveLineChartView">
        <attr name="xLegendTextColor" />
        <attr name="xLegendTextSize" />
        <attr name="xLegendMarginTop" />
        <attr name="xLegendMarginHorizontalPercent" />
        <attr name="xLegendCount" />
    </declare-styleable>

    <declare-styleable name="YAxisView" parent="CurveLineChartView">
        <attr name="yLegendTextColor" />
        <attr name="yLegendTextSize" />
        <attr name="yLegendLineColor" />
        <attr name="yLegendLineWidth" />
        <attr name="yLegendCount" />
        <attr name="yLegendMarginBottom" />
        <attr name="yLegendMarginStart" />
    </declare-styleable>

    <declare-styleable name="CurveLineSelectorView">
        <attr name="selectorFrameColor" format="color" />
        <attr name="selectorFogColor" format="color" />
        <attr name="selectorFrameMinWidthPercent" format="fraction" />
        <attr name="selectorFrameMaxWidthPercent" format="fraction" />
        <attr name="smoothScrollEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ScrollFrameView" parent="CurveLineSelectorView">
        <attr name="selectorFrameMinWidthPercent" />
        <attr name="selectorFrameMaxWidthPercent" />
        <attr name="selectorFrameColor" />
        <attr name="selectorFogColor" />
        <attr name="smoothScrollEnabled" />
    </declare-styleable>

    <declare-styleable name="CurveLineChartLayout" />
</resources>
